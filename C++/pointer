#include <iostream>

float sum (int tab[], int length)
{
    int i = 0;
    float sum = 0;  
    for (i=0;i<length;i++)
    {
        sum = sum + tab[i]; 
    }
    return sum;
}

int size_of_array(int tab)
{
    return (sizeof(tab)/sizeof(tab[0]));
}

void main(){
    float tab[3] = {1,2,3}; 
    int length; 
    length = size_of_array(tab);
    float sum; 
    sum = sum(tab, length);
    std::cout<< "the sum of the elements of you array is: "<<sum;
    return 0;
    
}